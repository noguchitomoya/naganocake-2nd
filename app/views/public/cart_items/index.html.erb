<strong><%= link_to "カートを空にする",cart_items_destroy_all_path ,method: :delete %></strong>
<table class="table">
    <thead>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
    </thead>
    <% sum=0 %>
    <tbody>
        <% @all_cart_items.each do |x| %>
        <tr>
            <td><%= attachment_image_tag Item.find(x.item_id), :image , size: "100x100"%><%= Item.find(x.item_id).name %>
            </td>
            <td><%= tax_price=(Item.find(x.item_id).price)*1.1.to_i  %></td>

            <td>
                <%= form_with model: x,url: cart_item_path(x),local: true  do |f| %>
                <%= f.text_field :amount %>
                <%= f.submit %>
                <% end %>
            </td>
            <td><%= total=tax_price* (x.amount)%></td>
            <% sum =sum + total%>
            <td><%= link_to "削除する",cart_item_path(x) ,method: :delete%></td>
        </tr>
        <% end %>

    </tbody>
</table>
<h4><%= link_to '買い物を続ける',root_path%></h4>
<strong>合計 <%= sum %>円</strong>

<h3><%= link_to '情報入力に進む'%></h3>