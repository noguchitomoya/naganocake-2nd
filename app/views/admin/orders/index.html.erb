
<h1>注文履歴一覧</h1>
<table class="table">
    <thead>
        <th >購入日時</th>
        <th >購入者</th>
        <th >注文個数</th>
        <th >注文ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @all_orders.each do |f| %>
        <tr>
            <td><%= link_to f.created_at.to_s(:datetime_jp),admin_order_path(f.id) %></td>
            <td><%= EndUser.find(f.end_user_id).last_name + EndUser.find(f.end_user_id).first_name %></td>
            <td><%= f.order_details.sum(:amount)%></td>
            <td><%= f.status_i18n %></td>
        </tr>
        <% end %>

    </tbody>
</table>